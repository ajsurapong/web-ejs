<!DOCTYPE html>
<html lang="en">

<%- include('./partials/header.ejs') %>

<body>
    <%- include('./partials/navbar.ejs', {page: 1}) %>

    <div class="container-fluid">
        <h1>Welcome <%= username %>
        </h1>

        <div class="row">
            <div class="col-10">
                <select id="selectYear" class="form-control" style="width: 100px;">
                    <!-- We check wheter ejs varialbe exists using locals.varname -->
                    <% const cyear = locals.chosenYear ? chosenYear: "all" %>
                    <option value="all">All years</option>
                    <% year.forEach(element=> { %>
                        <option value="<%= element.year %>" <%- element.year==cyear?'selected':'' %>>  
                            <%= element.year %>
                        </option>
                        <% }) %>
                </select>
            </div>
            <div class="col-2">
                <button class="btn btn-success float-right" id="btnAdd">Add</button>
            </div>
        </div>

        <table class="table table-bordered table-striped mt-2">
            <thead class="thead-dark">
                <tr>
                    <th>No.</th>
                    <th>Title</th>
                    <th>Detail</th>
                    <th>Year</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% for( let index=0; index < blog.length; index++ ) { %>
                    <tr>
                        <td>
                            <%= index+1 %>
                        </td>
                        <td>
                            <%= blog[index].title %>
                        </td>
                        <td>
                            <%= blog[index].detail %>
                        </td>
                        <td>
                            <%= blog[index].year %>
                        </td>
                        <td>
                            <button class="btn btn-danger btnDelete" postID="<%= blog[index].postID %>">Delete</button>
                            <!-- embed row detail with button coz we use external JS that can't access ejs variable -->
                            <button class="btn btn-warning btnEdit" postDetail="<%= JSON.stringify(blog[index]) %>">Edit</button>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>

        <!-- Modal -->
        <div class="modal fade" id="modalAdd" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 id="modalTitle" class="modal-title">Add new post</h5>
                            <button type="button" class="close" data-dismiss="modal">
                                <span>&times;</span>
                            </button>
                    </div>
                    <form id="formAdd">
                        <div class="modal-body">
                            <input type="text" class="form-control my-2" placeholder="Title" id="txtTitle">
                            <textarea class="form-control" id="txtDetail" cols="30" rows="5" placeholder="Detail"></textarea>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button id="btnModalAdd" type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <%- include('./partials/footer.ejs') %>
    </div>

    <script src="/scripts/js/blog.js"></script>
</body>

</html>